@model BooksListViewModel

@{
	ViewData["Title"] = "LIbri";
}

<a class="btn btn-primary p-2 my-2" asp-controller="Book" asp-action="Add">Aggiungi un libro</a>

@if(TempData["Error"] != null)
{
	<p class="text-danger">@TempData["Error"]</p>
}

@if(Model.Books.Count() > 0)
{
	<div class="row">
		<div class="col-md-4">
			<h3>Titolo</h3>
		</div>
		<div class="col-md-4">
			<h3>Autore</h3>
		</div>
		<div class="col-md-4">
			<h3>Genere</h3>
		</div>
		<hr />
	</div>
	@foreach(var book in Model.Books)
	{
		<div class="row">
			<div class="col-md-4">
				<p>@book.Titolo</p>
			</div>
			<div class="col-md-4">
				<p>@book.Autore</p>
			</div>
			<div class="col-md-4">
				<div class="d-flex justify-content-between align-items-start">
					<p>@book.Genere</p>
					<div class="m-0 p-0">
						<a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="m-0 p-1 btn btn-info">Dettagli</a>
					</div>
				</div>
				
			</div>

			<hr />
		</div>
	}
}
else
{
	<p class="text-danger">Nessun libro trovato..</p>
}

